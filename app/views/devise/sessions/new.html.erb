<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="row featured-boxes login">
        <div class="featured-box featured-box-secundary default info-content">
          <div class="box-content">
            <h2>Sign In</h2>
            <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control input-lg' } %>
                <br>
                <%= f.input :password, :required => false, input_html: { class: 'form-control input-lg' }  %>
                <div class="col-md-6">

                  <%= f.input :remember_me, :label => false, :inline_label => true, :as => :boolean if devise_mapping.rememberable?%>
                </div>
              </div>
              <br>
              <br>
              <div class="form-actions">
                <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-lg push-bottom' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>