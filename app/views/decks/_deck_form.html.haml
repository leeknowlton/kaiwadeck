.col-md-6
  = simple_form_for @deck do |f|
    = f.input :name, label: 'Deck Name', :input_html=>{:class=> 'form-control input-lg'}
    <br>
    #card_input
      = f.input :cards, as: :text, label: 'Enter Card Content Here (One Question/Prompt Per Line)', :input_html => {:rows => 10, :style=> 'width: 40em'}
    <br>
    = f.button :submit, class: 'btn btn-primary btn-lg push-bottom'